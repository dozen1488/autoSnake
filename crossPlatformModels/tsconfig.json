{
    "compilerOptions": {
        "target": "es5",
        "lib": [ "es6", "dom" ],
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}