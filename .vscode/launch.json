    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",    
            "name": "server",
            "program": "${workspaceFolder}/server/server.js",
            "cwd": "${workspaceFolder}/server",
            "sourceMaps": true,
            "env": {
                "DEBUG": "express:*",
                "TS_NODE_PROJECT": "${workspaceFolder}/crossPlatformModels/tsconfig.json"
            },
            "args": ["${relativeFile}"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "protocol": "inspector"
        },{
            "type": "node",
            "request": "launch",    
            "name": "trainer",
            "program": "${workspaceFolder}/server/neiroTrainer.js",
            "cwd": "${workspaceFolder}/server",
            "env": {
                "DEBUG": "express:*"
            }
        }
    ]
}